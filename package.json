{
  "name": "react-horizontal-timeline",
  "version": "1.1.1",
  "description": "A horizontal timeline component made using react",
  "main": "./dist/react-horizontal-timeline.js",
  "scripts": {
    "start": "node tools/server.js",
    "build": "cross-env NODE_ENV=production webpack --config tools/webpack.config.prod.js",
    "build:demos": "./node_modules/.bin/webpack --config tools/webpack.config.demos.prod.js",
    "prepublish": "npm run build",
    "lint": "./node_modules/.bin/eslint --config tools/lint-config.js src/ demos/demo-swipeable-views/HorizontalTimelineConfigurator.jsx",
    "test": "ava",
    "test:cover": "nyc ava",
    "test:watch": "npm run test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jckdrpr/react-horizontal-timeline"
  },
  "keywords": [
    "react",
    "timeline",
    "horizontal",
    "react-motion",
    "react-component"
  ],
  "author": "Sherub Thakur",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jckdrpr/react-horizontal-timeline/issues"
  },
  "homepage": "https://github.com/jckdrpr/react-horizontal-timeline",
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime"
    ],
    "env": {
      "development": {
        "sourceMaps": "inline"
      },
      "production": {
        "plugins": [
            "transform-react-constant-elements",
            "transform-react-remove-prop-types"
        ]
      }
    }
  },
  "ava": {
    "verbose": true,
    "files": [
      "src/**/*.test.js",
      "src/*.test.js"
    ],
    "source": [
      "src/**/*.jsx",
      "src/**/*.js",
      "!dist/**/*",
      "!coverage/**/*",
      "!src/**/*.test.js"
    ],
    "match": [],
    "concurrency": 5,
    "failFast": true,
    "tap": true,
    "require": [
      "./tools/test-helpers.js"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "exclude": [
      "src/**/*.test.js"
    ],
    "extension": [
      ".jsx",
      ".js"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ]
  },
  "dependencies": {
    "color": "^0.11.3",
    "radium": "^0.18.0",
    "react": "^15.0.2",
    "react-dimensions": "2.0.0-alpha1",
    "react-icons": "^2.0.1",
    "react-motion": "^0.4.2"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "bootstrap": "^3.3.6",
    "babel-core": "^6.3.21",
    "babel-eslint": "^6.0.2",
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-react-inline-elements": "^6.8.0",
    "babel-plugin-transform-react-constant-elements": "^6.9.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.7",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.9.0",
    "babel-runtime": "^6.9.2",
    "cross-env": "^2.0.0",
    "css-loader": "^0.23.1",
    "enzyme": "^2.4.1",
    "eslint": "^3.1.1",
    "eslint-plugin-react": "^5.1.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.3",
    "jsdom": "^9.4.1",
    "nyc": "^7.0.0",
    "react-addons-test-utils": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-swipeable-views": "^0.6.1",
    "react-transform-hmr": "^1.0.1",
    "style-loader": "^0.13.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.8.4",
    "webpack-dev-server": "^1.8.0"
  }
}
